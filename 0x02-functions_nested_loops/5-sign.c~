#include "main.h"

/**
 * print_sign - Prints the sign of a number and returns the appropriate value.
 * @n: The number whose sign is to be checked.

 * Return: -1 if n is negative, 0 if n is zero and 1 if n is positive.
 */
int print_sign(int n)
{
if (n < 0)
{
_putchar('-');
return (-1);
}

else if (n == 0)
{
_putchar(0 + '0');
return (0);
}

else
{
_putchar('+');
return (1);
}

}
